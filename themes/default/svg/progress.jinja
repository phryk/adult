<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg class="progress" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns="http://www.w3.org/2000/svg" width="{{ content.width }}" height="{{ content.height }}" viewbox="0 0 100% 100%" version="1.1" xmlns:dc="http://purl.org/dc/elements/1.1/">

    <style>
        {{ content.style }}
    </style>

    {% include "svg/defs.jinja" %}

    <line class="progress-line pre" x1="0" y1="50%" x2="{{ content.percent }}%" y2="50%" />
    <line class="progress-line post" x1="{{ content.percent }}%" y1="50%" x2="100%" y2="50%" />
    <use href="#marker" class="marker" x="{{ content.percent }}%" y="50%" />

</svg>
